{
  "scripts": {
    "dev": "gulp",
    "hash": "node .sh/hash.js",
    "create-meta": "node .sh/add-meta.js",
    "create-amp-style": "node .sh/create-amp-style.js",
    "tw:all": "npm-run-all --parallel tw tw:article tw:home tw:down tw:study tw:vip tw:media",
    "tw": "npx tailwindcss -i ./tailwind/input.css -o ./css/tailwind.min.css --watch",
    "tw:article": "npx tailwindcss -i ./tailwind/input.css -o ./css/tailwind.article.amp.css --watch --minify --config ./tailwind.article.config.js",
    "tw:study": "npx tailwindcss -i ./tailwind/input.css -o ./css/tailwind.study.amp.css --watch --minify --config ./tailwind.study.config.js",
    "tw:home": "npx tailwindcss -i ./tailwind/input.css -o ./css/tailwind.home.amp.css --watch --minify --config ./tailwind.home.config.js",
    "tw:down": "npx tailwindcss -i ./tailwind/input.css -o ./css/tailwind.down.amp.css --watch --minify --config ./tailwind.down.config.js",
    "tw:vip": "npx tailwindcss -i ./tailwind/input.css -o ./css/tailwind.vip.amp.css --watch --minify --config ./tailwind.vip.config.js",
    "tw:media": "npx tailwindcss -i ./tailwind/input.css -o ./css/tailwind.media.amp.css --watch --minify --config ./tailwind.media.config.js",
    "clear.article": "npx postcss ./css/tailwind.article.amp.css -o ./css/tailwind.article.amp.css --config postcss.config.js",
    "clear.tailwind": "npx postcss ./css/tailwind.min.css -o ./css/tailwind.min.css --config postcss.config.js",
    "gulp.tailwind.article": "gulp --gulpfile gulpfile.tailwind.article.js build",
    "lint-amp": "node .sh/amp.linter.js",
    "lint-index-amp": "amphtml-validator index.amp.html"
  },
  "dependencies": {
    "@ampproject/toolbox-optimizer": "^2.10.1",
    "@tailwindcss/cli": "^4.0.8",
    "amphtml-validator": "^1.0.38",
    "crypto": "^1.0.1",
    "gulp-replace": "^1.1.4",
    "tailwindcss": "^3.0.0"
  },
  "devDependencies": {
    "gulp": "^5.0.0",
    "gulp-clean-css": "^4.3.0",
    "gulp-file-include": "^2.3.0",
    "gulp-prettify": "^0.5.0",
    "gulp-shell": "^0.8.0",
    "gulp-uglify": "^3.0.2",
    "gulp-watch": "^5.0.1",
    "mkdirp": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.3",
    "postcss-clean": "^1.2.2",
    "postcss-cli": "^11.0.0",
    "postcss-comment": "^2.0.0",
    "through2": "^4.0.2"
  }
}
